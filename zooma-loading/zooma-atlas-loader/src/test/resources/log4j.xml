<?xml version="1.0" encoding="UTF-8" ?><!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

    <appender name="console" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d %-5p [%t] %C{2} (%F:%L) - %m%n" />
        </layout>
    </appender>

    <appender name="zooma-log" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="DatePattern" value="'.'yyyy-MM-dd" />
        <param name="File" value="zooma.log" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d %-5p [%t] %C{2} (%F:%L) - %m%n" />
        </layout>
    </appender>

    <logger name="org.springframework" additivity="false">
        <level value="WARN" />
        <appender-ref ref="console" />
    </logger>

    <logger name="uk.ac.ebi.fgpt.zooma.service.ContextBasedAnnotationResolverService" additivity="false">
        <level value="TRACE" />
        <appender-ref ref="console" />
    </logger>

    <logger name="uk.ac.ebi.fgpt.zooma.concurrent.WorkloadScheduler" additivity="false">
        <level value="DEBUG" />
        <appender-ref ref="console" />
    </logger>

    <!--<logger name="uk.ac.ebi.fgpt.zooma.datasource.SparqlAnnotationDAO" additivity="false">-->
        <!--<level value="TRACE" />-->
        <!--<appender-ref ref="console" />-->
    <!--</logger>-->

    <logger name="uk.ac.ebi.fgpt.zooma.load.ZoomaStandaloneLoader" additivity="false">
        <level value="DEBUG" />
        <appender-ref ref="console" />
    </logger>

    <logger name="uk.ac.ebi.fgpt.zooma.io.OWLAPIAnnotationSerializer" additivity="false">
        <level value="DEBUG" />
        <appender-ref ref="console" />
    </logger>

    <root>
        <priority value="INFO" />
        <appender-ref ref="console" />
    </root>

</log4j:configuration>
